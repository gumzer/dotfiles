mkdir_go()
{
if [[ -z "$1" ]]
then
    echo "Usage: mdgo <dir>"
else
    mkdir $1; cd $1
fi
}
alias mdgo=mkdir_go

on_function()
{
    a=`pwd`
    f=${a##*/}
    workon $f
    if [ $? -ne 0 ]; then
        bak=`pwd`
        a=`dirname $bak`
        f=${a##*/}
        workon $f
        cd $bak
    fi
}
alias on=on_function
alias off='deactivate'
