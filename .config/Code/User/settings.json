{
    "workbench.colorTheme": "Default Light+",
    "editor.fontFamily": "Hack, 'Droid Sans Mono', 'Courier New', monospace, 'Droid Sans Fallback'",
    "editor.fontSize": 18,
    // "editor.minimap.enabled": true,
    "python.linting.pylintEnabled": false,
    "python.linting.pylintArgs": [
        "--errors-only"
    ],
    "terminal.integrated.shell.windows": "C:\\Windows\\Sysnative\\cmd.exe",
    "code-runner.clearPreviousOutput": true,
    "code-runner.showExecutionMessage": false,
    "workbench.iconTheme": "vscode-icons",
    "[markdown]": {
        "editor.quickSuggestions": false
    },
    "window.zoomLevel": 0,
    "trailing-spaces.includeEmptyLines": false,
    "trailing-spaces.trimOnSave": true,
    "files.insertFinalNewline": true,
    "editor.roundedSelection": false,
    "files.exclude": {
        "**/.git": true,
        ".vscode": true,
        "**/__pycache__": true,
        "**/**/*.pyc": true
    },
    // "workbench.welcome.enabled": false,
    "vsicons.dontShowNewVersionMessage": true,
    "files.associations": {
        "*.pyx": "python",
        "*.tpl": "html"
    },
    "code-runner.executorMap": {
        "python": "python3",
        // "csharp": "echo '# calling mono\n' && cd $dir && csc /nologo $fileName && mono $dir$fileNameWithoutExt.exe",
        "csharp": "echo '# calling dotnet run\n' && dotnet run"
    },
    // this one troubled me with C#
    "editor.codeLens": false,
    // "csharp.fallbackDebuggerLinuxRuntimeId": "ubuntu.16.04-x64",
    // "workbench.panel.location": "bottom",
    "git.enableSmartCommit": true,
    "git.autofetch": true,
    // "editor.rulers": [120],
    "macros": {
        "commentLine": [
            "editor.action.commentLine",
            "cursorDown"
        ]
    },
    // Configure editor settings to be overridden for [nim] language.
    "[nim]":  {
        "editor.insertSpaces": true,
        "editor.tabSize": 2
    },
    "[scala]":  {
        "editor.insertSpaces": true,
        "editor.tabSize": 2
    },
    "telemetry.enableTelemetry": false,
    "workbench.startupEditor": "newUntitledFile",
}
