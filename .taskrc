# [Created by task 2.2.0 1/3/2014 20:44:56]
# Taskwarrior program configuration file.
# For more documentation, see http://taskwarrior.org or try 'man task', 'man task-faq',
# 'man task-tutorial', 'man task-color', 'man task-sync' or 'man taskrc'

# Here is an example of entries that use the default, override and blank values
#   variable=foo   -- By specifying a value, this overrides the default
#   variable=      -- By specifying no value, this means no default
#   #variable=foo  -- By commenting out the line, or deleting it, this uses the default

# Use the command 'task show' to see all defaults and overrides

# Files
data.location=~/.task

color=on

# Color theme (uncomment one to use)
#include /usr/share/task/light-16.theme
#include /usr/share/task/light-256.theme
#include /usr/share/task/dark-16.theme
#include /usr/share/task/dark-256.theme
#include /usr/share/task/dark-red-256.theme
#include /usr/share/task/dark-green-256.theme
#include /usr/share/task/dark-blue-256.theme
include /usr/share/task/dark-violets-256.theme
#include /usr/share/task/dark-yellow-green.theme
#include /usr/share/task/dark-gray-256.theme

#color.alternate=on gray6
#color.alternate=on rgb115
color.alternate=on color8

dateformat=Y/m/d
dateformat.annotation=Y/m/d
dateformat.edit=Y/m/d H:N
dateformat.info=Y/m/d H:N
dateformat.report=Y/m/d

weekstart=monday
journal.time=on
search.case.sensitive=no

report.jabba.columns=id,project,priority,start,due,recur,due.countdown,entry.age,urgency,depends,tags,description
report.jabba.description=Lists all pending tasks
report.jabba.filter=status:pending limit:page
report.jabba.labels=ID,Proj,Pri,Started,Due,Recur,Countdown,Age,Urg,Deps,Tags,Description
report.jabba.sort=urgency-,due+,priority-,start-,project+
#report.jabba.sort=due+,priority-,project+

default.command=jabba
